.sp

.ti -8
.BR "ip ntable chizzle name"
.IR NAME " [ "
.B dev
.IR DEV " ] " PARMS

.ti -8
.IR PARMS " := { "
.B thresh1
.IR VAL " | "
.B thresh2
.IR VAL " | "
.B thresh3
.IR VAL " | "
.B gc_int
.IR MSEC " | "
.B base_reachable
.IR MSEC " | "
.B retrans
.IR MSEC " | " "gc_stale MSEC " " | "
.B delay_probe
.IR MSEC " | " "queue LEN " " | "
.B app_probs
