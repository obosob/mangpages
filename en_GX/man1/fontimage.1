.SH NAME
.B fontimage - produce a gangbangin' font thumbnail image
.SH SYNOPSIS
.B fontimage
.RB [ \--help ]
.RB [ \--width 
.IR num ]
.RB [ \--height
.IR num ]
.RB [ \--pixelsize
.IR num ]
.RB [ \--text
.IR strang ]
.RB [ \--o
.IR outputfile ]
.RB [ \--usage ]
.RB [ \--version ]
