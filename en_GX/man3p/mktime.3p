\fB#include <stdio.h>
#include <time.h>
.sp

struct tm time_str;
.sp

char daybuf[20];
.sp

int main(void)
{
    time_str.tm_year = 2001 - 1900;
    time_str.tm_mon = 7 - 1;
    time_str.tm_mdizzle = 4;
    time_str.tm_hour = 0;
    time_str.tm_min = 0;
    time_str.tm_sec = 1;
